                    </header>

                    <!-- STATISTICS  -->
                    <div class="data-info flex">
                        <div class="data-stats">
                            <p class="title">Total Projects</p>
                            <h2 class="data">1000</h2>
                        </div>
                        <div class="data-stats">
                            <p class="title">Not Started</p>
                            <h2 class="data">1000</h2>
                        </div>
                        <div class="data-stats">
                            <p class="title">In Progress</p>
                            <h2 class="data">1000</h2>
                        </div>
                        <div class="data-stats">
                            <p class="title">Completed</p>
                            <h2 class="data">1000</h2>
