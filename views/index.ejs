                                        <path fill="#"
                                            d="M10,18a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,10,18ZM20,6H16V5a3,3,0,0,0-3-3H11A3,3,0,0,0,8,5V6H4A1,1,0,0,0,4,8H5V19a3,3,0,0,0,3,3h8a3,3,0,0,0,3-3V8h1a1,1,0,0,0,0-2ZM10,5a1,1,0,0,1,1-1h2a1,1,0,0,1,1,1V6H10Zm7,14a1,1,0,0,1-1,1H8a1,1,0,0,1-1-1V8H17Zm-3-1a1,1,0,0,0,1-1V11a1,1,0,0,0-2,0v6A1,1,0,0,0,14,18Z">
                                        </path>
                                    </svg>
                                    <span class="text">Remove</span>
                                </button>
                            </div>
                        </div>

                        <!-- STATUS -->
                        <div class="project-status flex">
                            <h2>Status:</h2>
                            <div class="inputs flex">
                                <div class="checkbox flex warning">
                                    <input type="radio" name="same">
                                    <p class="statusText">Not Started</p>
                                </div>
                                <div class="checkbox flex inProgress">
                                    <input type="radio" name="same">
                                    <p class="statusText">In Progress</p>
                                </div>
                                <div class="checkbox flex success">
                                    <input type="radio" name="same">
                                    <p class="statusText">Completed</p>
                                </div>
                            </div>
                        </div>

                        <hr>

                        <!-- SUB-TASKS  -->
                        <div class="sub-task flex">
                            <h2>Sub Tasks:</h2>
                            <div class="p-sub-tasks flex">
                                <p class="text task">Plumbing</p>
                                <p class="text task">Electricity</p>
                            </div>
                            <div class="action-btn flex">
                                <button class="btn-secondary" type="button" onclick="addSubTask()">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" id="plus-circle"
                                        class="">
                                        <path fill=""
                                            d="M12,2A10,10,0,1,0,22,12,10,10,0,0,0,12,2Zm0,18a8,8,0,1,1,8-8A8,8,0,0,1,12,20Zm4-9H13V8a1,1,0,0,0-2,0v3H8a1,1,0,0,0,0,2h3v3a1,1,0,0,0,2,0V13h3a1,1,0,0,0,0-2Z">
                                        </path>
                                    </svg>
                                    <span class="text">Add</span>
                                </button>
                                <button class="btn-warning" type="button" onclick="removeSubTask()">
